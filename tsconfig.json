{
    "extends": "@total-typescript/tsconfig/base.json",
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowJs": true,
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "noUncheckedIndexedAccess": true,
        "verbatimModuleSyntax": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@deemix/*": [
                "./*/src"
            ]
        }
    },
    "exclude": [
        "**/node_modules",
        "**/dist",
        "**/out"
    ]
}