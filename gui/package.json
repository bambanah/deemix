{
	"name": "deemix-gui",
	"version": "0.1.0",
	"private": true,
	"description": "A standalone electron app that wraps deemix-webui",
	"main": "dist/index.js",
	"homepage": "https://github.com/bambanah/deemix",
	"author": "Bambanah <hello@lachie.xyz>",
	"license": "GPL-3.0-only",
	"type": "module",
	"scripts": {
		"dev": "cross-env NODE_ENV=production electron .",
		"build": "tsup src/index.ts src/preload.ts --external electron --format esm --dts",
		"dist": "electron-builder",
		"pack": "electron-builder --dir",
		"set-version": "node scripts/set-version.mjs",
		"reset-version": "node scripts/reset-version.mjs"
	},
	"devDependencies": {
		"electron": "32.0.2",
		"electron-builder": "^25.0.5",
		"node-gyp": "^10.2.0",
		"tsup": "^8.2.4"
	},
	"dependencies": {
		"deemix-webui": "workspace:*",
		"electron-context-menu": "^4.0.4",
		"electron-window-state-manager": "^0.3.2",
		"yargs": "^17.7.2"
	},
	"build": {
		"appId": "app.deemix.gui",
		"asar": true,
		"productName": "deemix-gui",
		"directories": {
			"output": "release"
		},
		"files": [
			"dist/**/*",
			"build/**/*",
			"package.json"
		],
		"mac": {
			"target": [
				{
					"target": "dmg",
					"arch": "x64"
				},
				{
					"target": "dmg",
					"arch": "arm64"
				}
			],
			"artifactName": "deemix-gui_${arch}.${ext}",
			"category": "public.app-category.music"
		},
		"win": {
			"target": [
				{
					"target": "nsis",
					"arch": "x64"
				},
				{
					"target": "portable",
					"arch": "x64"
				}
			]
		},
		"linux": {
			"target": [
				"appimage",
				"deb"
			],
			"artifactName": "deemix-gui.${ext}",
			"category": "AudioVideo,Audio",
			"icon": "build/icon.icns"
		},
		"nsis": {
			"artifactName": "${productName}_setup.${ext}",
			"oneClick": false,
			"license": "../LICENSE.txt",
			"allowToChangeInstallationDirectory": true,
			"uninstallDisplayName": "${productName}",
			"deleteAppDataOnUninstall": true
		},
		"portable": {
			"artifactName": "${productName}.${ext}",
			"requestExecutionLevel": "user"
		}
	}
}
